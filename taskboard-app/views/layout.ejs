<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title || "TaskBoard" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark mb-4">
    <div class="container">
      <a class="navbar-brand" href="/">TaskBoard</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#mainNav"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="mainNav">
        <ul class="navbar-nav align-items-center ms-auto">
          <% if (currentUser) { %>
            <li class="nav-item me-3">
              <a class="nav-link" href="/workspaces">Workspaces</a>
            </li>
            <li class="nav-item me-3">
              <a class="nav-link" href="/tasks">Tasks</a>
            </li>
            <li class="nav-item me-3">
              <a class="nav-link position-relative" href="/notifications">
                Notifications
                <% if (typeof unreadCount !== "undefined" && unreadCount > 0) { %>
                  <span class="badge bg-danger rounded-pill ms-1">
                    <%= unreadCount %>
                  </span>
                <% } %>
              </a>
            </li>
            <li class="nav-item me-3">
              <span class="nav-link disabled">
                <strong><%= currentUser.name %></strong>
                <% if (currentWorkspaceName) { %>
                  Â· <span class="badge bg-secondary">
                    <%= currentWorkspaceName %>
                  </span>
                <% } %>
              </span>
            </li>
            <li class="nav-item">
              <form method="POST" action="/logout" class="d-inline">
                <button class="btn btn-sm btn-outline-light" type="submit">
                  Logout
                </button>
              </form>
            </li>
          <% } else { %>
            <li class="nav-item me-3">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/signup">Sign Up</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container mb-5">
    <% if (error) { %>
      <div class="alert alert-danger glass-alert"><%= error %></div>
    <% } %>
    <% if (success) { %>
      <div class="alert alert-success glass-alert"><%= success %></div>
    <% } %>

    <%- body %>
  </main>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  ></script>
</body>
</html>
