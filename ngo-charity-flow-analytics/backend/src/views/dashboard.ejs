<h1>Dashboard</h1>

<div class="grid">
  <div class="card">
    <h3>Total Donations (count)</h3>
    <div id="donationCount" class="big">—</div>
  </div>

  <div class="card">
    <h3>Total Donations (amount)</h3>
    <div id="donationTotal" class="big">—</div>
  </div>

  <div class="card">
    <h3>NGOs</h3>
    <div id="ngoCount" class="big">—</div>
  </div>
</div>

<div class="card">
  <h2>Recent Donations (with NGO)</h2>
  <table class="table" id="donationsTable">
    <thead>
      <tr>
        <th>Date</th>
        <th>Donor</th>
        <th>Amount</th>
        <th>Method</th>
        <th>Status</th>
        <th>NGO</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>
</div>
